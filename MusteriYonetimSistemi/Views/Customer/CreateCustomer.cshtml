@model MusteriYonetimSistemi.Models.ViewModels.CustomerViewModel

<div class="container mt-5">
    <form method="post" asp-controller="Customer" asp-action="CreateCustomer">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="CustomerName">Name:</label>
                    <input asp-for="CustomerName" type="text" class="form-control" id="CustomerName">
                </div>
                <div class="form-group">
                    <label for="CustomerSurName">Surname:</label>
                    <input asp-for="CustomerSurName" type="text" class="form-control" id="CustomerSurName">
                </div>
                <div class="form-group">
                    <label for="Address">Address:</label>
                    <textarea asp-for="Address" class="form-control" id="Address"></textarea>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="City">City:</label>
                    <input asp-for="City" type="text" class="form-control" id="City">
                </div>
                <div class="form-group">
                    <label for="Region">Region:</label>
                    <input asp-for="Region" type="text" class="form-control" id="Region">
                </div>
                <div class="form-group">
                    <label for="PostalCode">Postal Code:</label>
                    <input asp-for="PostalCode" type="number" class="form-control" id="PostalCode">
                </div>
                <div class="form-group">
                    <label for="Country">Country:</label>
                    <input asp-for="Country" type="text" class="form-control" id="Country">
                </div>
                <div class="form-group">
                    <label for="Phone">Phone:</label>
                    <input asp-for="Phone" type="number" class="form-control" id="Phone">
                </div>
                <div class="form-group">
                    <label for="Email">Email:</label>
                    <input asp-for="Email" type="email" class="form-control" id="Email">
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Create Customer</button>
    </form>
</div>
