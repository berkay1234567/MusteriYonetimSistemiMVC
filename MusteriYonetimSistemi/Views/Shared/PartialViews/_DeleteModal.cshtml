
<div class="modal fade" tabindex="-1" role="dialog" id="DeleteRecord">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5>Delete Customer</h5>
                <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true"></span></button>
            </div>
            <form method="post" asp-controller="Customer" asp-action="DeleteCustomer">
                <div class="modal-body">
                    <div class="row mb-3">
                        <div class="col">
                            <label>ID:</label>
                            <input type="number" class="form-control" name="CustomerID" id="CustomerID" required readonly />
                        </div>
                        <div class="col">
                            <label>Name:</label>
                            <input type="text" class="form-control" name="CustomerName" id="CustomerName" disabled />
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col">
                            <label>Surname:</label>
                            <input type="text" class="form-control" name="CustomerSurName" id="CustomerSurName" disabled />
                        </div>
                        <div class="col">
                            <label>Address:</label>
                            <input type="text" class="form-control" name="Address" id="Address" disabled />
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col">
                            <label>City:</label>
                            <input type="text" class="form-control" name="City" id="City" disabled />
                        </div>
                        <div class="col">
                            <label>Region:</label>
                            <input type="text" class="form-control" name="Region" id="Region" disabled />
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col">
                            <label>Postal Code:</label>
                            <input type="text" class="form-control" name="PostalCode" id="PostalCode" disabled />
                        </div>
                        <div class="col">
                            <label>Country:</label>
                            <input type="text" class="form-control" name="Country" id="Country" disabled />
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col">
                            <label>Phone:</label>
                            <input type="text" class="form-control" name="Phone" id="Phone" disabled />
                        </div>
                        <div class="col">
                            <label>Email:</label>
                            <input type="text" class="form-control" name="Email" id="Email" disabled />
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col">
                            <label>Is Active:</label>
                            <input type="text" class="form-control" name="IsActive" id="IsActive" disabled />
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-danger">Delete Customer</button>

                </div>
            </form>
        </div>
    </div>
</div>
